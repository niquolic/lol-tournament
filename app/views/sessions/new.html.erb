<h2 class="text-2xl font-bold mb-4">Connexion Admin</h2>

<%= form_with url: sessions_path, local: true do %>
  <div class="mb-4">
    <%= label_tag :email %>
    <%= email_field_tag :email, nil, class: "border rounded px-4 py-2 w-full" %>
  </div>

  <div class="mb-4">
    <%= label_tag :password %>
    <%= password_field_tag :password, nil, class: "border rounded px-4 py-2 w-full" %>
  </div>

  <%= submit_tag "Se connecter", class: "bg-blue-600 text-white px-4 py-2 rounded hover:bg-blue-700" %>
<% end %>
