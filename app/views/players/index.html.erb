<div class="max-w-7xl mx-auto sm:px-6 lg:px-8">
  <h2 class="text-2xl font-semibold text-gray-900">Liste des joueurs</h2>

  <div class="mt-6">
    <% if @players.any? %>
      <table class="min-w-full bg-white">
        <thead>
          <tr>
            <th class="px-4 py-2 text-left">Nom</th>
            <th class="px-4 py-2 text-left">Rôle</th>
            <th class="px-4 py-2 text-left">Équipe</th>
            <th class="px-4 py-2 text-left">Détails</th>
          </tr>
        </thead>
        <tbody>
          <% @players.each do |player| %>
            <tr class="border-t border-gray-200">
              <td class="px-4 py-2"><%= player.first_name %> <%= player.last_name %></td>
              <td class="px-4 py-2"><%= player.role %></td>
              <td class="px-4 py-2"><%= player.team.name %></td>
              <td class="px-4 py-2">
                <%= link_to 'Voir les détails', player_path(player), class: "text-blue-600 hover:text-blue-800" %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    <% else %>
      <p class="text-gray-500">Aucun joueur créé pour le moment.</p>
    <% end %>
  </div>
</div>
