<div class="max-w-7xl mx-auto sm:px-6 lg:px-8">
  <h2 class="text-2xl font-semibold text-gray-900">Détails du joueur : <%= @player.first_name %> <%= @player.last_name %></h2>

  <div class="mt-6">
    <table class="min-w-full bg-white">
      <thead>
        <tr>
          <th class="px-4 py-2 text-left">Attribut</th>
          <th class="px-4 py-2 text-left">Valeur</th>
        </tr>
      </thead>
      <tbody>
        <tr class="border-t border-gray-200">
          <td class="px-4 py-2 font-medium">Prénom</td>
          <td class="px-4 py-2"><%= @player.first_name %></td>
        </tr>
        <tr class="border-t border-gray-200">
          <td class="px-4 py-2 font-medium">Nom</td>
          <td class="px-4 py-2"><%= @player.last_name %></td>
        </tr>
        <tr class="border-t border-gray-200">
          <td class="px-4 py-2 font-medium">Équipe</td>
          <td class="px-4 py-2"><%= @player.team.name %></td>
        </tr>
        <tr class="border-t border-gray-200">
          <td class="px-4 py-2 font-medium">Rôle</td>
          <td class="px-4 py-2"><%= @player.role %></td>
        </tr>
        <tr class="border-t border-gray-200">
          <td class="px-4 py-2 font-medium">Date de création</td>
          <td class="px-4 py-2"><%= @player.created_at.strftime("%d %B %Y") %></td>
        </tr>
      </tbody>
    </table>
  </div>

  <div class="mt-6">
    <%= link_to 'Retour à la liste des joueurs', players_path, class: "bg-blue-600 text-white px-4 py-2 rounded-md hover:bg-blue-700" %>
  </div>
</div>
